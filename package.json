{
  "name": "pdfsearch-mcp",
  "version": "0.2.0",
  "description": "MCP server that indexes PDFs locally and provides search.",
  "type": "module",
  "private": true,
  "engines": { "node": ">=18" },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "index": "tsx scripts/build-index.ts",
    "search": "tsx scripts/quick-search.ts",
    "health": "tsx scripts/health.ts",
    "smoke": "tsx scripts/smoke.ts",
    "setup": "npm install && tsx scripts/build-index.ts && tsx src/server.ts",
    "list-tools": "tsx scripts/list-tools.ts",
    "call-tool": "tsx scripts/call-tool.ts",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "eslint": "^9.10.0",
    "@types/node": "^22.5.4",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  }
}
